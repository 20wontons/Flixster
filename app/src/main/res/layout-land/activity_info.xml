<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A4A4A">

    <ImageView
        android:id="@+id/infoPoster"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/infoPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintBottom_toBottomOf="@+id/infoPoster"
        app:layout_constraintEnd_toEndOf="@+id/infoPoster"
        app:layout_constraintStart_toStartOf="@+id/infoPoster"
        app:layout_constraintTop_toTopOf="@+id/infoPoster"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/sample_title"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/infoPoster"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoReleaseDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="@string/sample_date"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/infoPoster"
        app:layout_constraintTop_toBottomOf="@+id/infoTitle" />

    <RatingBar
        android:id="@+id/infoRatingBar"
        android:layout_width="237dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:isIndicator="true"
        android:progressTint="#FFEB3B"
        android:rating="4.2"
        app:layout_constraintStart_toEndOf="@+id/infoPoster"
        app:layout_constraintTop_toBottomOf="@+id/infoReleaseDate" />

    <TextView
        android:id="@+id/infoOverview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/sample_overview"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/infoPoster"
        app:layout_constraintTop_toBottomOf="@+id/infoRatingBar" />

</androidx.constraintlayout.widget.ConstraintLayout>